<%= provide :title, "Sing Up" %>
<section class="hero is-white is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-black">新規登録</h3>
        <hr class="login-hr">
        <p class="subtitle has-text-black">お客様情報を入力してください</p>
        <div class="box">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :nickname, "ニックネーム" %>
              <%= f.text_field :nickname, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :last_name, "姓(漢字)" %>
              <%= f.text_field :last_name, autofocus: true %><br />
              <%= f.label :first_name, "名(漢字)" %>
              <%= f.text_field :first_name, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :last_name_kana, "姓(カナ)" %>
              <%= f.text_field :last_name_kana, autofocus: true %><br />
              <%= f.label :first_name_kana, "名(カナ)" %>
              <%= f.text_field :first_name_kana, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :birthday, "生年月日" %>
              <%= f.date_field :birthday, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :address, "住所" %>
              <%= f.text_field :address, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :phone_number, "電話番号" %>
              <%= f.telephone_field :phone_number, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>( <%= @minimum_password_length %> 文字以上 )</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, "パスワード再入力" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="actions">
              <%= f.submit "登録する", class: "button is-info" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
