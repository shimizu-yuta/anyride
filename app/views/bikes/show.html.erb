<%= provide :title, "Bike Information" %>
<section class="section has-text-centered">
  <h3 class="title is-2">バイク情報</h3>
  <hr>
</section>
<section class="container">
  <div class="column is-offset-one-quarter">
    <h3 class="title is-2"><%= @bike.manufacture.name %> <%= @bike.name %></h3>
  </div>
  <div class="column is-half is-offset-one-quarter">
    <figure class="image is-3by2">
      <img src="https://images.unsplash.com/photo-1475778057357-d35f37fa89dd?dpr=1&auto=compress,format&fit=crop&w=1920&h=&q=80&cs=tinysrgb&crop=" alt="Image">
    </figure>
    <hr>
  </div>
  <div class="column has-text-centered">
    <h2><%= @bike.prefecture.name %></h2>
    <h2>年式：<%= @bike.year %>年</h2>
    <h2>走行距離：<%= @bike.mileage %></h2>
    <h2>排気量：<%= @bike.displacement %>cc</h2>
    <h2>お気に入り<%= @bike.favorites.count %>件</h2>
    <h2>料金：<%= @bike.price %>円/日</h2>
    <h1>オーナー</h1>
    <h2><%= @user.nickname %>さん</h2>
    <h1>バイク説明</h1>
    <h2><%= @bike.description %></h2>
  </div>
</section>
<section class="container">
  <% if current_user.check(@bike) %>
    <%= form_with(model: current_user.favorites.find_by(bike_id: @bike.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :bike_id, @bike.id %>
      <%= f.submit '登録解除', class: 'btn btn-danger' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :bike_id, @bike.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</section>
<section class="section">
  <%= link_to '' do %>
    <div class="container has-text-centered">
      <button class="button is-info is-large">予約する</button>
    </div>
  <% end %>
</section>
