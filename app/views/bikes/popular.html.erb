<%= provide :title, "Popular" %>
<section class="container">
  <section class="section">
    <div class="container has-text-centered">
      <h2 class="title">人気バイク一覧</h2>
    </div>
  </section>
  <hr class="login-hr">
</section>
<div class="container">
  <div class="section">
    <div class="row columns is-multiline">
      <% .each do |bike| %>
        <div class="column is-one-third">
          <%= link_to bike_path(bike.id) do %>
            <div class="card large">
              <div class="card-image">
                <figure class="image">
                  <img src="https://images.unsplash.com/photo-1475778057357-d35f37fa89dd?dpr=1&auto=compress,format&fit=crop&w=1920&h=&q=80&cs=tinysrgb&crop=" alt="Image">
                </figure>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-left">
                    <p class="title is-3"><%= bike.manufacture.name %> <%= bike.name %></p>
                    <p class="is-4"><%= bike.year %>年式</p>
                    <p class="is-4"><%= bike.price %>円/日</p>
                    <p class="is-4">お気に入り登録 <%= bike.favorites.count %>件</p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
